<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/banner"
        android:layout_alignParentTop="true"
        android:id="@+id/banner"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:layout_below="@+id/banner"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Rfullname"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rfullname"
        android:id="@+id/fullname1"
        android:background="#f9f9f9"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:id="@+id/name"
        android:layout_below="@+id/fullname1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@id/name"
        android:background="#f9f9f9"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/Rpassword"
        android:layout_below="@id/username"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rpassword"
        android:inputType="textPassword"
        android:background="#f9f9f9"
        android:id="@+id/password1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:id="@+id/Rpassword1"
        android:layout_below="@id/password1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rpassword1"
        android:inputType="textPassword"
        android:background="#f9f9f9"
        android:id="@+id/password12"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Register"
        android:layout_below="@id/password12"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/register"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Registered"
        android:id="@+id/ar"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/register"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Now"
        android:layout_toRightOf="@+id/ar"
        android:layout_below="@+id/register"
        android:layout_marginLeft="10dp"
        android:id="@+id/loginnow1"
        android:textColor="#e90848"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/footer"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
